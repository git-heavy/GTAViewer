<UserControl x:Class="Heavy.DFFViewer.View.MainWindowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             mc:Ignorable="d" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"              
             xmlns:v="clr-namespace:Heavy.DFFViewer.View"
             d:DesignHeight="295" d:DesignWidth="452">
  <UserControl.Resources>
    <v:GeometryObjectView x:Key="GeometryObjectView" DataContext="{Binding GeometryViewModel}"/>
  </UserControl.Resources>
  <DockPanel LastChildFill="True">
    <Menu IsMainMenu="True" DockPanel.Dock="Top">
      <MenuItem Header="_File">
        <MenuItem Header="_Open" Command="{Binding LoadModelCommand}"/>
        <MenuItem Header="Close" Command="{Binding CloseModelCommand}"/>
      </MenuItem>
    </Menu>
    <StatusBar DockPanel.Dock="Bottom">
      <StatusBarItem></StatusBarItem>
    </StatusBar>
    <StaticResource ResourceKey="GeometryObjectView" />
  </DockPanel>
</UserControl>